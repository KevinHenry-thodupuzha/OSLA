ASSUME DS:DATA, CS:CODE

DATA SEGMENT
    MSG1 DB 0AH,0DH,"ENTER FIRST NUMMBER$"
    MSG2 DB 0AH,0DH,"ENTER SECOND NUMMBER$"
    MSG3 DB 0AH,0DH,"SUM IS $"
ENDS

CODE SEGMENT
    START:
    MOV AX,DATA
    MOV DS,AX
    
    LEA DX,MSG1
    MOV AH,09H
    INT 21H     
    
    MOV AH,01H
    INT 21H
    MOV BH,AL   ;INPUT NUM1
    
    MOV AH,01H
    INT 21H
    MOV BL,AL
              
    LEA DX,MSG2
    MOV AH,09H
    INT 21H
    
    MOV AH,01H
    INT 21H
    MOV CH,AL    ;INPUT NUM2
    
    MOV AH,01H
    INT 21H
    MOV CL,AL               
    
    ;SUM
    MOV AL,BL
    MOV AH,00H
    ADD AL,CL
    AAA
    MOV CL,AH
    ADD AL,30H
    MOV BL,AL ;RES DIGIT 1
    
    MOV AL,BH
    MOV AH,00H
    ADD AL,CH
    ADD AL,CL
    AAA
    MOV CH,AH ;CARRY RES
    ADD Al,30H
    MOV BH,AL ;RES DIGIT  2
    
    ;DISPLAY
    LEA DX,MSG3
    MOV AH,09H
    INT 21H 
    
    MOV DL,CH
    MOV AH,02H
    INT 21H  ;CARRY
    
    MOV DL,BH
    MOV AH,02H
    INT 21H  ;HIGHER DIGIT
    
    MOV DL,BL
    MOV AH,02H
    INT 21H  ;LOWER DIGIT
    
    MOV AH,4CH
    INT 21H
    CODE ENDS
END START